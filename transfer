Welcome
<div *ngIf="editStatus">
    <div *ngFor="let pat of tempdata;">
    <form #frm="ngForm" (submit)="update(frm)">
        <input type="number" placeholder="Patient_id" name="id" [ngModel]="pat.id" ngModel readonly> &nbsp;
        <input type='text' placeholder="Name" [ngModel]="pat.name" name="name" ngModel> &nbsp;
        <input type='number' placeholder="Age" [ngModel]="pat.age" name="age" ngModel> &nbsp;
        <select name='gender' [ngModel]="pat.gender" ngModel>
            <option value='male'>Male</option>
            <option value='female'>FeMale</option>
        </select>&nbsp;
        <button type='submit'>update</button>
    </form>
</div>
</div>


update(frm:NgForm){
  this.tempdata=[];
  this.http.put(`https://todearhemant.pythonanywhere.com/patient/api/patients/${frm.value.id}/`,frm.value).subscribe(data=>{
    this.patients=this.patients.map((ob:any)=>ob.id==frm.value.id?data:ob)
  })
  this.editStatus=false;
}

